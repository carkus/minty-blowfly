
<% provide(:title, @user.username) %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>



<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <b class="caret"></b>
  </a>
  <ul class="dropdown-menu">
    <li><%= link_to "Profile", current_user %></li>
    <li><%= link_to "Settings", '#' %></li>
    <li class="divider"></li>
    <li>
      <%= link_to "Log out", logout_path, method: "delete" %>
    </li>
  </ul>
</li>


<div class="panel ck-panel ck-no-padding ck-box-profile"
     ng-style="{'background':'#eee', 'margin-bottom': '20px'}">

  <div class="panel-heading ck-panel-header-plain">

    <span class="ck-text-ui ck-0-8"><%= current_user.id %></span>






    <!--ui-dropdown type="profile" sendid="{{x.userid}}" /-->

  </div>

  <div class="panel-body ck-profile-body">
    <div class="row" >
      <div class="ck-thumbnail ck-profile-titleimage">
        <%= userimage_for @user %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3">
        <div class="pull-left thumbnail ck-thumbnail ck-thumb-profile ck-action" style="height: 190px">
          <%= userimage_for @user %>
        </div>
      </div>
      <div class="col-xs-9">
        <div class="ck-text-profile-name ck-text-right ck-text-ui"><%= @user.username %></div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="ck-text-body ck-text-right"><strong><%= @user.tagline %></strong></div>
      </div>
      <div class="col-xs-12">
        <div class="ck-text-body">Status: <%= @user.status %></div>
      </div>
    </div>

    <div class="panel-footer ck-footer ck-text-body">
      <span class="ck-text">
          <span class="fa fa-fw fa-clock-o"></span>&nbsp;{{getTimeElapsed(userprofile.lastactive) || 'Just Now'}}&nbsp;&nbsp;
        <!--span class="fa fa-fw fa-mail ck-text-right">&nbsp;{{userprofile.email}}&nbsp;&nbsp;</span-->
      </span>
    </div>

  </div>

</div>